rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Module 10 - FE-3: Firestore access controls
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isDoctor() {
      return isAuthenticated() && request.auth.token.role in ['doctor', 'radiologist', 'oncologist'];
    }
    
    function isAdmin() {
      return isAuthenticated() && request.auth.token.role == 'admin';
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // User profiles
    match /users/{userId} {
      allow read: if isOwner(userId) || isDoctor() || isAdmin();
      allow create: if isAuthenticated();
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if isAdmin();
    }
    
    // Patient data (scans, analyses)
    match /patients/{patientId} {
      allow read: if isDoctor() || isAdmin();
      allow write: if isDoctor() || isAdmin();
    }
    
    match /scans/{scanId} {
      allow read: if isDoctor() || isAdmin();
      allow write: if isDoctor() || isAdmin();
    }
    
    match /analyses/{analysisId} {
      allow read: if isDoctor() || isAdmin();
      allow write: if isDoctor() || isAdmin();
    }
    
    // Audit logs (admin only)
    match /audit/{logId} {
      allow read: if isAdmin();
      allow write: if false; // Logs are write-only via backend
    }
    
    // Default deny all
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
