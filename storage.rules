rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Module 10 - FE-3: Firebase Storage rules for secure MRI file storage
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isDoctor() {
      return isAuthenticated() && request.auth.token.role in ['doctor', 'radiologist', 'oncologist'];
    }
    
    function isAdmin() {
      return isAuthenticated() && request.auth.token.role == 'admin';
    }
    
    // MRI scans (uploaded by doctors, read by assigned doctors)
    match /scans/{userId}/{scanId}/{fileName} {
      allow read: if isDoctor() || isAdmin();
      allow write: if isDoctor() || isAdmin();
      allow delete: if isAdmin();
    }
    
    // Processed results (generated by backend)
    match /results/{userId}/{resultId}/{fileName} {
      allow read: if isDoctor() || isAdmin();
      allow write: if false; // Only backend can write
      allow delete: if isAdmin();
    }
    
    // Reports (generated PDFs)
    match /reports/{userId}/{reportId}.pdf {
      allow read: if isDoctor() || isAdmin();
      allow write: if false; // Only backend can write
      allow delete: if isAdmin();
    }
    
    // User profile images
    match /profiles/{userId}/avatar.{ext} {
      allow read: if isAuthenticated();
      allow write: if request.auth.uid == userId && request.resource.size < 5 * 1024 * 1024; // 5MB max
    }
    
    // Default deny all
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
